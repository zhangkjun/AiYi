                                                    Foreground="White"
                                                    Text="{Binding ChooseCount}" />
                                            </Border>
                                        </Grid>
                                        <!--  图片模式  -->
                                        <Grid
                                            Name="ImageMode"
                                            Margin="0"
                                            Visibility="Collapsed">
                                            <Border Padding="15">
                                                <Grid>
                                                    <Border Background="White" CornerRadius="10">
                                                        <Border.Effect>
                                                            <DropShadowEffect
                                                                BlurRadius="10"
                                                                Opacity="0.1"
                                                                ShadowDepth="0" />
                                                        </Border.Effect>
                                                    </Border>
                                                    <Border
                                                        Width="180"
                                                        Height="180"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Bottom"
                                                        Background="White"
                                                        BorderBrush="#FFEDEDED"
                                                        BorderThickness="1"
                                                        CornerRadius="2">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="*" />
                                                                <RowDefinition Height="32" />
                                                                <RowDefinition Height="32" />
                                                            </Grid.RowDefinitions>
                                                            <Image Source="{Binding Images}" Stretch="UniformToFill" />
                                                            <TextBlock
                                                                Grid.Row="1"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                FontSize="16"
                                                                Foreground="#FF777777"
                                                                Text="{Binding Name}" />
                                                            <StackPanel
                                                                Grid.Row="2"
                                                                HorizontalAlignment="Center"
                                                                Orientation="Horizontal">
                                                                <TextBlock
                                                                    VerticalAlignment="Center"
                                                                    FontSize="14"
                                                                    Foreground="#FFC09E8C"
                                                                    Text="{Binding WebPrice}" />
