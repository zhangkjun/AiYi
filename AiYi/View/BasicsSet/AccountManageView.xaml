<UserControl
    x:Class="AiYi.View.AccountManageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:AiYi.Control"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AiYi.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="718"
    d:DesignWidth="924"
    DataContext="{Binding Source={StaticResource Locator}, Path=AccountManage}"
    mc:Ignorable="d">
    <StackPanel Margin="0,100,0,0">
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="16"
                Text="当前账号：" />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="16"
                Text="{Binding CurrentAccount}" />
        </StackPanel>
        <Button
            Width="140"
            Height="42"
            Margin="0,50,0,0"
            Background="#FFFD8E1A"
            Command="{Binding LogoutCommand}"
            Content="注销账号"
            Style="{StaticResource CommonButton}" />
    </StackPanel>
</UserControl>
